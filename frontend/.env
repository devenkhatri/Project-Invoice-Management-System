# =============================================================================
# PROJECT INVOICE MANAGEMENT SYSTEM - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!
# For detailed setup instructions, see: ../ENVIRONMENT_SETUP_GUIDE.md

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL (should match your backend server)
REACT_APP_API_URL=http://localhost:5000/api

# Base URL for the frontend application
REACT_APP_BASE_URL=http://localhost:3000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name and branding
REACT_APP_NAME=Project Invoice Manager
REACT_APP_APP_NAME=Project Invoice Management
REACT_APP_VERSION=1.0.0

# Company information
REACT_APP_COMPANY_NAME=Your Company Name
REACT_APP_SUPPORT_EMAIL=support@yourcompany.com

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================

# Google Sheets API key (for client-side operations if needed)
REACT_APP_GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here

# Google OAuth Client ID (for Google Sign-In)
# Get from: https://console.cloud.google.com/apis/credentials
REACT_APP_GOOGLE_CLIENT_ID=your-google-oauth-client-id

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Only public/publishable keys are safe to use in frontend

# Stripe Configuration
# Get from: https://dashboard.stripe.com/apikeys
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Configuration
# Get from: https://developer.paypal.com/
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_client_id

# Razorpay Configuration (for Indian payments)
# Get from: https://dashboard.razorpay.com/
REACT_APP_RAZORPAY_KEY_ID=your_razorpay_key_id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Sentry DSN for frontend error tracking (optional)
REACT_APP_SENTRY_DSN=your-frontend-sentry-dsn

# Hotjar tracking (optional)
REACT_APP_HOTJAR_ID=your-hotjar-id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Generate source maps for debugging (set to false in production)
GENERATE_SOURCEMAP=true

# Enable debug mode for development
REACT_APP_DEBUG_MODE=true

# Enable React strict mode
REACT_APP_STRICT_MODE=true

# =============================================================================
# PWA CONFIGURATION
# =============================================================================

# PWA settings
REACT_APP_PWA_NAME=Project Invoice Management
REACT_APP_PWA_SHORT_NAME=Invoice Manager
REACT_APP_PWA_DESCRIPTION=Complete project and invoice management solution
REACT_APP_PWA_THEME_COLOR=#1976d2
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language
REACT_APP_DEFAULT_LANGUAGE=en

# Available languages (comma-separated)
REACT_APP_AVAILABLE_LANGUAGES=en,hi

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Default theme
REACT_APP_DEFAULT_THEME=light

# Currency settings
REACT_APP_DEFAULT_CURRENCY=INR
REACT_APP_CURRENCY_SYMBOL=â‚¹

# Date format
REACT_APP_DATE_FORMAT=DD/MM/YYYY

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable service worker for caching
REACT_APP_ENABLE_SERVICE_WORKER=true

# API request timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Maximum file upload size (bytes)
REACT_APP_MAX_FILE_SIZE=10485760

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Content Security Policy settings
REACT_APP_CSP_ENABLED=true

# Enable HTTPS redirect in production
REACT_APP_FORCE_HTTPS=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Enable test mode features
REACT_APP_TEST_MODE=false

# Mock API responses for testing
REACT_APP_MOCK_API=false