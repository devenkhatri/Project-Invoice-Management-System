{
  "name": "project-invoice-backend",
  "version": "1.0.0",
  "description": "Backend API for Project Invoice Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:load": "jest --testPathPattern=load",
    "test:all": "jest --coverage",
    "test:system": "ts-node src/scripts/runSystemTests.ts",
    "test:requirements": "ts-node src/scripts/validateRequirements.ts",
    "test:data-integrity": "ts-node src/scripts/verifyDataIntegrity.ts",
    "test:gst-compliance": "jest --testPathPattern=services/__tests__/(gstReporting|eInvoicing).test.ts",
    "sheets:init": "ts-node src/scripts/initializeSheets.ts",
    "sheets:init:sample": "ts-node src/scripts/initializeSheets.ts --with-sample-data",
    "sheets:backup": "ts-node src/scripts/backupRestore.ts backup",
    "sheets:restore": "ts-node src/scripts/backupRestore.ts restore",
    "sheets:list-backups": "ts-node src/scripts/backupRestore.ts list",
    "sheets:config": "ts-node src/scripts/sheetConfig.ts",
    "sheets:setup": "ts-node src/scripts/setup.ts setup",
    "sheets:health": "ts-node src/scripts/setup.ts health",
    "deploy": "bash deployment/deploy.sh",
    "maintenance": "ts-node src/scripts/productionMaintenance.ts",
    "maintenance:daily": "ts-node src/scripts/productionMaintenance.ts daily-maintenance",
    "maintenance:backup": "ts-node src/scripts/productionMaintenance.ts backup",
    "maintenance:health": "ts-node src/scripts/productionMaintenance.ts health-check"
  },
  "keywords": [
    "project-management",
    "invoice",
    "google-sheets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "html2canvas": "^1.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/node-cache": "^4.2.5",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
